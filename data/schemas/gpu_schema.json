{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GPU Specification Schema",
  "description": "Schema for GPU specifications and evolution data",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "name", "year", "manufacturer", "series", "architecture",
      "process_nm", "transistors_millions", "die_size_mm2",
      "base_clock_mhz", "boost_clock_mhz",
      "vram_mb", "memory_type", "memory_bus_width", "memory_bandwidth_gbps", "memory_clock_mhz",
      "tflops_fp32", "tflops_fp16", "tflops_int8",
      "tdp_watts", "power_connectors", "launch_price_usd",
      "directx_version", "opengl_version", "vulkan_support",
      "ray_tracing_support", "dlss_support", "fsr_support", "xess_support",
      "max_displays", "max_resolution", "release_date", "notes"
    ],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "year": {
        "type": "integer",
        "minimum": 1995,
        "maximum": 2030
      },
      "manufacturer": {
        "type": "string",
        "enum": ["NVIDIA", "AMD", "Intel", "Other"]
      },
      "series": {
        "type": "string"
      },
      "architecture": {
        "type": "string"
      },
      "process_nm": {
        "type": "integer",
        "minimum": 1,
        "maximum": 1000
      },
      "transistors_millions": {
        "type": "integer",
        "minimum": 1
      },
      "die_size_mm2": {
        "type": "number",
        "minimum": 10
      },
      "cuda_cores": {
        "type": ["integer", "null"],
        "minimum": 1
      },
      "stream_processors": {
        "type": ["integer", "null"],
        "minimum": 1
      },
      "execution_units": {
        "type": ["integer", "null"],
        "minimum": 1
      },
      "tensor_cores": {
        "type": ["integer", "null"],
        "minimum": 0
      },
      "rt_cores": {
        "type": ["integer", "null"],
        "minimum": 0
      },
      "base_clock_mhz": {
        "type": "integer",
        "minimum": 50
      },
      "boost_clock_mhz": {
        "type": "integer",
        "minimum": 50
      },
      "vram_mb": {
        "type": "integer",
        "minimum": 16
      },
      "memory_type": {
        "type": "string"
      },
      "memory_bus_width": {
        "type": "integer",
        "minimum": 64
      },
      "memory_bandwidth_gbps": {
        "type": "number",
        "minimum": 1
      },
      "memory_clock_mhz": {
        "type": "integer",
        "minimum": 100
      },
      "tflops_fp32": {
        "type": "number",
        "minimum": 0
      },
      "tflops_fp16": {
        "type": "number",
        "minimum": 0
      },
      "tflops_int8": {
        "type": "number",
        "minimum": 0
      },
      "ray_tracing_tflops": {
        "type": ["number", "null"],
        "minimum": 0
      },
      "tdp_watts": {
        "type": "integer",
        "minimum": 10
      },
      "power_connectors": {
        "type": "string"
      },
      "launch_price_usd": {
        "type": "integer",
        "minimum": 0
      },
      "directx_version": {
        "type": "string"
      },
      "opengl_version": {
        "type": "string"
      },
      "vulkan_support": {
        "type": "boolean"
      },
      "ray_tracing_support": {
        "type": "boolean"
      },
      "dlss_support": {
        "type": "boolean"
      },
      "fsr_support": {
        "type": "boolean"
      },
      "xess_support": {
        "type": "boolean"
      },
      "max_displays": {
        "type": "integer",
        "minimum": 1
      },
      "max_resolution": {
        "type": "string"
      },
      "release_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}$"
      },
      "notes": {
        "type": "string"
      }
    }
  }
}
