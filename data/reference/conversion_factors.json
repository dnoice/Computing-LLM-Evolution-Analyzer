  "memory_units": {
    "description": "Memory and storage unit conversions",
    "note": "Two standards exist: binary (base-1024, IEC standard) and decimal (base-1000, SI standard). Computer memory typically uses binary, while storage manufacturers often use decimal.",
    
    "bytes_to_bits": 8,
    
    "binary_units": {
      "description": "Binary units (IEC 60027-2 standard, base-1024)",
      "kibibyte": {
        "bytes": 1024,
        "bits": 8192,
        "abbreviation": "KiB",
        "alternative_abbreviation": "KB (ambiguous)",
        "notes": "2^10 bytes. Often incorrectly labeled as KB."
      },
      "mebibyte": {
        "bytes": 1048576,
        "kibibytes": 1024,
        "abbreviation": "MiB",
        "alternative_abbreviation": "MB (ambiguous)",
        "notes": "2^20 bytes"
      },
      "gibibyte": {
        "bytes": 1073741824,
        "mebibytes": 1024,
        "abbreviation": "GiB",
        "alternative_abbreviation": "GB (ambiguous)",
        "notes": "2^30 bytes. RAM capacity uses this standard."
      },
      "tebibyte": {
        "bytes": 1099511627776,
        "gibibytes": 1024,
        "abbreviation": "TiB",
        "alternative_abbreviation": "TB (ambiguous)",
        "notes": "2^40 bytes"
      },
      "pebibyte": {
        "bytes": 1125899906842624,
        "tebibytes": 1024,
        "abbreviation": "PiB",
        "notes": "2^50 bytes"
      }
    },
    
    "decimal_units": {
      "description": "Decimal units (SI standard, base-1000)",
      "kilobyte": {
        "bytes": 1000,
        "bits": 8000,
        "abbreviation": "kB",
        "alternative_abbreviation": "KB (ambiguous)",
        "notes": "10^3 bytes. Storage manufacturers typically use this."
      },
      "megabyte": {
        "bytes": 1000000,
        "kilobytes": 1000,
        "abbreviation": "MB",
        "notes": "10^6 bytes"
      },
      "gigabyte": {
        "bytes": 1000000000,
        "megabytes": 1000,
        "abbreviation": "GB",
        "notes": "10^9 bytes. Hard drive/SSD capacity uses this standard."
      },
      "terabyte": {
        "bytes": 1000000000000,
        "gigabytes": 1000,
        "abbreviation": "TB",
        "notes": "10^12 bytes"
      },
      "petabyte": {
        "bytes": 1000000000000000,
        "terabytes": 1000,
        "abbreviation": "PB",
        "notes": "10^15 bytes"
      }
    },
    
    "common_confusion": {
      "description": "Why your 1TB drive shows as 931GB",
      "example": "1 TB (decimal) = 1,000,000,000,000 bytes = 931.32 GiB (binary)",
      "calculation": "1,000,000,000,000 ÷ 1,073,741,824 = 931.32",
      "explanation": "Manufacturers use decimal (1000^4), OS displays binary (1024^3)"
    }
  },

